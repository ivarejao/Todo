<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row"
    android:layout_width="@dimen/_290sdp"
    android:layout_height="@dimen/_80sdp"
    app:cardCornerRadius="30dp"
    app:cardElevation="15dp"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/row_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_16ssp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@null"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="@string/task_title"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/taskcalendar"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_85sdp"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/colorPrimary"
            android:contentDescription="@string/taskcalendar"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:gravity="center"/>

        <TextView
            android:id="@id/date"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="@string/date"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/taskcalendar"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:gravity="left"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/taskcalendar"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/colorQuickActionsBackground"
            android:textColorHint="@color/colorQuickActionsBackground"
            android:hint="@string/subtitle_task"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/timeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/taskcalendar"
            app:layout_constraintTop_toTopOf="@+id/taskcalendar"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/app_name"
            android:fontFamily="@font/ubuntu_bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>